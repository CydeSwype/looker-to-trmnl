# Gmail API Configuration
# Option 1: Service Account (Recommended)
# Set GMAIL_CREDENTIALS as JSON string of service account key
GMAIL_CREDENTIALS={"type":"service_account","project_id":"..."}

# Option 2: OAuth2 (Alternative)
# GMAIL_CLIENT_ID=your-client-id
# GMAIL_CLIENT_SECRET=your-client-secret

# Gmail: address that receives Looker reports, and search query
GMAIL_USER_EMAIL=you@example.com
GMAIL_QUERY=from:looker-studio-noreply@google.com
GMAIL_LABEL=INBOX

# TRMNL: Private Plugin webhook URL or Image webhook URL
TRMNL_WEBHOOK_URL=https://usetrmnl.com/api/custom_plugins/YOUR_PLUGIN_ID
TRMNL_API_KEY=optional-api-key-if-required

# Service Configuration
PORT=8080
MAX_EMAILS_PER_RUN=10
